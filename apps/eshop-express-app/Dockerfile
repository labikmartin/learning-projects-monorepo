# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t eshop-express-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system eshop-express-app && \
          adduser --system -G eshop-express-app eshop-express-app

COPY dist/apps/eshop-express-app eshop-express-app
RUN chown -R eshop-express-app:eshop-express-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix eshop-express-app --omit=dev -f install

CMD [ "node", "eshop-express-app" ]

{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "verbatimModuleSyntax": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/common/constants": ["libs/common/constants/src/index.ts"],
      "@libs/common/helpers": ["libs/common/helpers/src/index.ts"],
      "@libs/common/react-components": [
        "libs/common/react-components/src/index.ts"
      ],
      "@libs/common/types": ["libs/common/types/src/index.ts"],
      "@libs/recipes-lib": ["libs/recipes-lib/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
